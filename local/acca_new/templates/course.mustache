{{#data}}
{{#enrolled}}
<div class="course-list-block enrolled_course">
  <div class="d-flex">
    <div class="flex-grow-1">
      <div class="row no-gutters">
        <div class="col-lg-12 pl-3 py-2">
          <h6 class="mb-2 mt-1">
            <a href="{{ course_url }}">{{ course_name }}</a>
          </h6>
          <span>
            <a class="btn resume-btn" href="{{ course_url }}">Resume</a></span
          >
        </div>
      </div>
    </div>
    <div class="flex-grow-1">
      <div class="row no-gutters">
        {{#result}}
          <div class="col-lg-12 pl-3 py-2">
            <h6 class="mb-2 mt-1">
              {{result}}
            </h6>
          </div>
        {{/result}}
        {{^result}}
          <select
            name="result"
            class="form-select"
            id="result"
            onchange="updateresult({{courseid}}, $(this).val())"
          >
            <option value="noselect">Select</option>
            <option value="pass">Pass</option>
            <option value="fail">Fail</option>
          </select>
        {{/result}}

      </div>
    </div>
    <div class="d-inline-block pl-2">
      <div class="course-progress px-3">
        <div class="posi-bottom">
          <div class="progress-block">
            <svg width="0" height="0" style="opacity: 0; position: absolute">
              <defs>
                <linearGradient id="linear" x1="0%" y1="0%" x2="100%" y2="0%">
                  <stop offset="0%" stop-color="#00f796"></stop>
                  <stop offset="100%" stop-color="#00b7f4"></stop>
                </linearGradient>
              </defs>
              <rect
                x="10"
                y="10"
                width="600"
                height="200"
                fill="url(#linear)"
              ></rect>
            </svg>
            <section class="svg-container">
              <svg
                class="radial-progress"
                data-countervalue="{{ course_progress }}"
                viewBox="0 0 80 80"
              >
                <circle
                  class="bar-static-outer"
                  cx="40"
                  cy="40"
                  r="40"
                ></circle>
                <circle class="bar-static" cx="40" cy="40" r="34"></circle>
                <circle
                  class="bar-static-inner"
                  cx="40"
                  cy="40"
                  r="31"
                ></circle>
                <circle
                  class="bar--animated"
                  cx="40"
                  cy="40"
                  r="35"
                ></circle>
                <text
                  class="countervalue start"
                  x="50%"
                  y="57%"
                  transform="matrix(0, 1, -1, 0, 80, 0)"
                >
                  {{ course_progress }}
                </text>
              </svg>
            </section>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
{{/enrolled}}
